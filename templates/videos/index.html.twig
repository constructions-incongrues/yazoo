{% extends 'base.html.twig' %}

{% block title %}Yazoo!{% endblock %}

{% block body %}

{% include 'search/navbar.html.twig' with {'data': data} %}

<div class="container">

    {% include 'search/search.html.twig' with {'data': data} %}

    <b>
        {% if data.count > 0 %}
            {{data.count}} result(s)
        {% else %}
            {% include 'search/noresult.html.twig' %}
        {% endif %}
    </b>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        {% for r in data.results %}
            {% include 'videos/card.html.twig' with {'r': r} %}
        {% endfor %}
    </div>

    <div class="row d-flex justify-content-center">
        {% include 'search/pagination.html.twig' %}
    </div>

</div>

{% endblock %}
