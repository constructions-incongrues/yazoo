{% extends 'base.html.twig' %}

{% block title %}Yazoo!{% endblock %}

{% block body %}

<div class="container">

    <div class="row">
        <h1><a href="/">Yazoo</a> Videos
        </h1>
    </div>

    <div class="row">
        <div class="col-12">
            <form action="" method="get">
                <input type="search" class="form-control" name="q" id="q" autocomplete=off autofocus value="{{ q }}" placeholder="search...">
            </form>
        </div>
    </div>
    <hr>


        <!--https://getbootstrap.com/docs/5.0/components/card/-->

        <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for r in results %}
            {% include 'videos/card.html.twig' with {'r': r} %}
        {% endfor %}
        </div>

        <hr>

        Count: {{count}}

        {% include 'videos/pagination.html.twig' %}

    </div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Link</button>
      </div>
    </div>
  </div>
</div>

<style>
.card-img-top {
    width: 100%;
    height: 15vw;
    object-fit: cover;
}
</style>

{% endblock %}
