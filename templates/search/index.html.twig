            </form>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-12">
        {% for r in results %}
            <div class="result">
                <h4>[{{r.provider}}] <a href="{{ r.url }}">{{ r.title|default('no title') }}</a></h4>
                <span class="badge bg-secondary">{{ r.status }}</span> <i class="text-muted">{{ r.url }}</i> <br />
                {% if r.description %}
                    {{ r.description }}
                {% else %}
                    {{ r.mimetype }}
                {% endif %}
                <br />
                <a href="/link/{{ r.id }}">Link#{{ r.id }}</a>
            </div>
        {% endfor %}
        </div>
        <hr>

        Count: {{count}}

    </div>


</div>
