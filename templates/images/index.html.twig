{% extends 'base.html.twig' %}

{% block title %}Yazoo!{% endblock %}

{% block javascripts %}
    <script src="/js/images/app.js" defer></script>
{% endblock %}

{% block body %}

{% include 'search/navbar.html.twig' with {'data': data} %}

<div class="container">

    {% include 'search/search.html.twig' with {'data': data} %}

    
    
    {% if data.count > 0 %}
        {{data.count}} result(s)
    {% else %}
        {% include 'search/noresult.html.twig' %}
    {% endif %}



    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    {% for r in data.results %}
        {% include 'images/card.html.twig' with {'r': r} %}
    {% endfor %}
    </div>

    <div class="row py-2">
        {% include 'search/pagination.html.twig' with {'data': data} %}
    </div>

</div>


{% endblock %}
