{% extends 'base.html.twig' %}

{% block title %}Link Stats{% endblock %}

{% block body %}

{% include 'search/navbar.html.twig' %}

<div class="container">
    <h1>Stats</h1>
    <div class="row">
        <div class="col-12 py-2">
            <div class="card">
                <div class="card-header"><b>Discussions with most links</b></div>
                <div class="card-body">
                    <table class="table table-sm table-hover">
                        <thead>
                            <th class="text-end">n</th>
                            <th>Discussion</th>
                            <th>Forum link</th>
                        </thead>
                        <tbody>
                        {% for r in discussions %}
                            <tr>
                            <td class="text-end"><i class="text-muted">{{ r.num }}</a>
                            <td><a href="/?q=discussion:{{ r.discussion_id }}">{{ r.name }}</a>

                            <td>
                            <a href="https://www.musiques-incongrues.net/forum/discussion/{{ r.discussion_id }}">#{{ r.discussion_id }}</a>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>



        </div>
    </div>

</div>
{% endblock %}
